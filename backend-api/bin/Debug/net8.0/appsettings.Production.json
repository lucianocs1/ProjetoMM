{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ecommerce_production.db"
  },
  "Jwt": {
    "SecretKey": "production-ultra-secure-secret-key-for-jwt-that-must-be-at-least-256-bits-long-and-random",
    "Issuer": "EcommerceMM-Production",
    "Audience": "EcommerceMM-Production"
  },
  "BaseUrl": "http://localhost:5006",
  "AllowedHosts": "localhost",
  "MaxFileSize": 5242880,
  "AllowedImageTypes": ["image/jpeg", "image/png", "image/gif", "image/webp"],
  "Security": {
    "EnableHttpsRedirection": false,
    "RequireHttps": false,
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:5173"],
    "SessionTimeout": 7200,
    "MaxLoginAttempts": 5,
    "LockoutDuration": 300
  }
}
